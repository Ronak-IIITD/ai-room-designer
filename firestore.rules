rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to validate generation data
    function isValidGeneration() {
      let data = request.resource.data;
      return data.keys().hasAll(['generationId', 'prompt', 'generatedImageUrl', 'createdAt']) &&
             data.generationId is string &&
             data.prompt is string &&
             data.prompt.size() <= 5000 && // Max 5000 chars for prompt
             data.generatedImageUrl is string &&
             data.createdAt is timestamp &&
             (data.originalImageUrl == null || data.originalImageUrl is string);
    }
    
    // User generations subcollection
    match /users/{userId}/generations/{generationId} {
      // Users can only read their own generations
      allow read: if isOwner(userId);
      
      // Users can only create their own generations with valid data
      allow create: if isOwner(userId) && isValidGeneration();
      
      // Users can update their own generations (for editing prompts, etc.)
      allow update: if isOwner(userId) && isValidGeneration();
      
      // Users can delete their own generations
      allow delete: if isOwner(userId);
    }
    
    // User profile documents (if you add them in the future)
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
